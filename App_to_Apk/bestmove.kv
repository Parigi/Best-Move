<MyLayout>
    path: path
    id: my_widget

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        Label:
            id: path
            size_hint: .3,.4
            text: "None file has been selected yet"

        FileChooserIconView:
            id: filechooser
            on_selection: my_widget.selected(filechooser.selection)

        Button:
            text:"GO!"
            on_press: root.btn()

